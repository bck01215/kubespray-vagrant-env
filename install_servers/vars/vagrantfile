Vagrant.configure("2") do |config|
  config.vm.define "server1" do |server1|
    server1.vm.box = "generic/rhel8"
    server1.vm.hostname = "server1"
    server1.vm.network "private_network", ip: "192.168.33.10"
    server1.vm.provider "docker" do |d|
        d.image = "registry.access.redhat.com/ubi8/ubi"
        d.name = "server1"
        d.remains_running = false
    end
  end

  config.vm.define "server2" do |server2|
    server2.vm.box = "generic/rhel8"
    server2.vm.hostname = "server2"
    server2.vm.network "private_network", ip: "192.168.33.11"
    server2.vm.provider "docker" do |d|
        d.image = "registry.access.redhat.com/ubi8/ubi"
        d.name = "server2"
        d.remains_running = false
    end
  end

  config.vm.define "server3" do |server3|
    server3.vm.box = "generic/rhel8"
    server3.vm.hostname = "server3"
    server3.vm.network "private_network", ip: "192.168.33.12"
    server3.vm.provider "docker" do |d|
        d.image = "registry.access.redhat.com/ubi8/ubi"
        d.name = "server3"
        d.remains_running = false
    end
  end
end
